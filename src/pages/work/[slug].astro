---
import BlueNoteLayout from '../../layouts/BlueNoteLayout.astro';
import { getCollection } from 'astro:content';
import CustomMusicPlayer from '../../components/media/CustomMusicPlayer.svelte';
import { Image } from 'astro:assets';

export async function getStaticPaths() {
  const projects = await getCollection('projects');
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
const { Content } = await project.render();
---

<BlueNoteLayout title={project.data.title}>
  <main class="container mx-auto px-4 py-8 text-white">
    <a href="/work" class="inline-block bg-gray-700 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded-full transition-colors duration-300 mb-8">
      &larr; Back to Works
    </a>
    <article class="prose prose-invert max-w-none">
      <h1 class="text-4xl font-bold mb-4">{project.data.title}</h1>
      <p class="text-zinc-400 text-lg mb-6">Client: {project.data.client} | Category: {project.data.category}</p>
      
      {project.data.coverImage && (
        <Image src={project.data.coverImage} alt={project.data.title} class="w-full h-96 object-cover rounded-lg mb-8" widths={[400, 800, 1200]} sizes="100vw"/>
      )}

      {project.data.jingle && (
        <div class="mb-8">
          <h2 class="text-2xl font-semibold mb-2">Jingle</h2>
          <CustomMusicPlayer src={project.data.jingle} client:load />
        </div>
      )}

      <Content />
    </article>
  </main>
</BlueNoteLayout>
