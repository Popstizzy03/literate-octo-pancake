<!-- HERO SECTION -->
<section class="min-h-[80vh] flex flex-col justify-center items-start relative mb-24">
  
  <!-- Decorative background glow -->
  <div class="absolute top-0 right-0 w-96 h-96 bg-[var(--color-signal)] rounded-full mix-blend-multiply filter blur-[128px] opacity-20 pointer-events-none"></div>

  <span class="font-mono text-[var(--color-signal)] tracking-widest uppercase text-sm mb-4 animate-pulse">
    ‚óè On Air / Recording
  </span>

  <h1 class="font-sans font-semibold text-5xl md:text-7xl lg:text-8xl tracking-tight leading-[1.1] mb-8 text-balance">
    Sound That <br />
    <span class="text-transparent bg-clip-text bg-gradient-to-r from-[var(--color-brass-bright)] to-[var(--color-brass-dim)]">
      Sticks.
    </span>
  </h1>

  <p class="font-serif text-[var(--color-ink-secondary)] text-xl md:text-2xl max-w-2xl leading-relaxed mb-10">
    Crafting memorable sonic identities and catchy jingles for brands that want to be heard, not just seen.
  </p>

  <div class="flex flex-wrap gap-4">
    <a href="#work" class="px-8 py-4 bg-[var(--color-signal)] text-black font-bold rounded-sm hover:bg-[var(--color-brass-bright)] transition-colors duration-300">
      Listen to Work
    </a>
    <a href="#contact" class="px-8 py-4 border border-[var(--color-border-highlight)] text-[var(--color-ink-primary)] font-medium rounded-sm hover:border-[var(--color-signal)] transition-colors duration-300">
      Contact Studio
    </a>
  </div>
</section>