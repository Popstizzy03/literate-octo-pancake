---
import { getCollection } from "astro:content";

const projects = await getCollection("projects", ({ data }) => {
  return data.featured === true;
});
---

<section
  class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 text-white"
>
  <div class="col-span-full">
    <h2 class="text-2xl md:text-3xl font-bold text-white mb-8">
      What Clients Say
    </h2>
  </div>
  {
    projects.map((project) => (
      <blockquote class="bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg p-6 shadow-lg">
        <p class="text-lg italic mb-4">"{project.data.description}"</p>
        <footer class="text-right">
          <cite class="text-white font-semibold not-italic">
            - {project.data.client}
          </cite>
        </footer>
      </blockquote>
    ))
  }
</section>
